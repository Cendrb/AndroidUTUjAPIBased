<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/currentOperation" android:layout_alignParentBottom="true" android:visibility="gone">
    <ProgressBar
        android:id="@+id/currentOperationProgress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        android:paddingStart="6dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentOperationText"
        android:layout_toEndOf="@id/currentOperationProgress"
        android:layout_marginStart="4dp" />
</RelativeLayout>